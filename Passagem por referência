#include <stdio.h>
#include <locale.h>

void incrementar (int *x)
{
  (*x)++;
  printf("Dentro da função: x = %d\n", *x);

}
int main()
{
    setlocale(LC_ALL, "Portuguese");
    int num = 5;
    printf("Antes da chamada da função: num = %d\n", num);
    incrementar(&num);
    printf("Depois da chamada da função: num = %d\n", num);
    return 0;
}
