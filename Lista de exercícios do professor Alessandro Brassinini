//3º questão
int main()
{
    setlocale(LC_ALL, "Portuguese");
    float velocidade, distancia, tempo;

    printf("Entre com a distância:");
    scanf("%f", &distancia);
    printf("Entre com o tempo:");
    scanf("%f", &tempo);
    velocidade = distancia / tempo;
    printf("\nSua velocidade média é: %f\n", velocidade);
}


