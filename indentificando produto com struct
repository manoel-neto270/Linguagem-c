#include <stdio.h>
#include <stdlib.h>
struct Produto
{
    int id;
    char nome[30];
    float preco;
};
int main()
{
    struct Produto produtos[2];
    for(int i = 0; i < 2; i++)
    {
        printf("Produto %d:\n", i + 1);
        printf("ID:");
        scanf("%d", &produtos[i].id);
        getchar();

        printf("Nome: ");
        fgets(produtos[i].nome, sizeof(produtos[i].nome), stdin);

        printf("Preço: ");
        scanf("%f", &produtos[i].preco);


    }
    printf("\nLista de produtos:\n");
    for (int i = 0; i < 2; i++)
    {
        printf("Produto %d; %sPreço: R$%.2f\n", produtos[i].id, produtos[i].nome, produtos[i].preco);
    }
    return 0;
}
